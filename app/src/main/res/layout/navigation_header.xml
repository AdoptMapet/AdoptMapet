<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/purple_200"
    android:gravity="center">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/nav_profile_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/profile"
        app:civ_border_color="#B0B3B8"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/nav_user_full_name"
        android:layout_width="287dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nav_profile_image"
        android:layout_alignStart="@+id/nav_profile_image"
        android:layout_alignEnd="@+id/nav_profile_image"
        android:layout_marginStart="-82dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="-81dp"
        android:text="Username"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textAlignment="center" />

</RelativeLayout>